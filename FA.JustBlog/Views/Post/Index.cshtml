@model IEnumerable<FA.JustBlog.ViewModels.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<!-- Page Header -->
<header class="masthead" style="background-image: url('/Content/CleanBlog/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Clean Blog</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a href="~/Post/Details/@item.Id">
                        <h2 class="post-title">
                            @Html.DisplayFor(modelItem => item.Title)
                        </h2>
                    </a>
                    <p class="post-meta">
                        Posted @Html.DisplayFor(modelItem => item.PostedOn)
                        with rate @Html.DisplayFor(modelItem => item.Rate)
                        by @Html.DisplayFor(modelItem => item.ViewCount)
                    </p>
                    <p class="post-subtitle">
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </p>
                </div>
                <hr />
            }
            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>
<hr>