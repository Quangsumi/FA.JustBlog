@model FA.JustBlog.ViewModels.PostViewModel

@{
    ViewBag.Title = "Details";
}

<!-- Page Header -->
<header class="masthead" style="background-image: url('/Content/CleanBlog/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.ShortDescription</h2>
                    <span class="meta">
                        Posted @Model.PostedOn
                        with rate @Model.Rate
                        by @Model.ViewCount
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Model.PostContent
            </div>
        </div>
    </div>
</article>
<hr>
